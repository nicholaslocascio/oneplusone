    <div class="col-md-5 well center well-spaced">
  <%= form_tag login_path %>

    <% flash.each do |name, msg| %>
    <div class='alert alert-dismissable alert-danger'>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg.to_s %>
    </div>
    <% end %>

    <legend class="organization-form-legend">Log in to1+1!</legend>



<div class="field">
    <div class="input-group">
      <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
      <%= text_field_tag :email, params[:email] , class: "form-control", :placeholder => :email %>
    </div>
    </div>

<div class="field">
    <div class="input-group">
      <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
      <%= password_field_tag :password, nil, class: "form-control", :placeholder => :password %>
    </div>
</div>

    <div class="actions">
      <%= submit_tag 'Login', class: "btn btn-lg btn-info btn-block"%>
    </div>

    <%= link_to "Forgot Password?", new_password_reset_path %>
    

   </div>