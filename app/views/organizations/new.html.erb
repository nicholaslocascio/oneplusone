
    <div class="col-md-5 well center well-spaced">
      <%= render 'shared/form_errors', errors: @organization.errors %>

  <%= form_for @organization, url: signup_path do |f| %>


    <legend class="organization-form-legend">Sign Up for 1+1!</legend>

    <div class="field">
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
      <%= f.text_field :name, class: "form-control", :placeholder => 'Company Name' %>
      </div>
    </div>

    <div class="field">
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
        <%= f.text_field :email, class: "form-control", :placeholder => :email %>
      </div>
    </div>

    <div class="field">
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
      <%= f.password_field :password, class: "form-control", :placeholder => :password %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-lg btn-info btn-block", value: "Sign Up" %>
    </div>

  <% end %>

   </div>
