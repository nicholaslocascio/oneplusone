    <div class="col-md-10 center"> 
  <h1>All People in <%= current_organization.name %></h1>
</div>
 
    <div class="col-md-10 well center">


<table class="table clearfix">
    <div>
       <%= link_to new_person_path, class:"btn btn-success pull-right" do %>
        <span class="glyphicon glyphicon-plus"></span> Create Person
      <% end %>
    </div>
    <div>

      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Teams on</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
            <%= render partial: 'person', collection: @people %>
      </tbody>

    </div>
  </table>

<br/>
</div>
