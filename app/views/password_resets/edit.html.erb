    <div class="col-md-4 well center">
  <%= form_for @organization, url: password_reset_path(params[:id]) do |f| %>

    <% if @organization.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <ul>
          <% @organization.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <legend class="organization-form-legend">Reset Password</legend>


   <div class="field">
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
      <%= f.password_field :password, class: "form-control", :placeholder => :password %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-lg btn-info btn-block", value: "Update Password" %>
    </div>

  <% end %>

   </div>
